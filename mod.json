{
	"geode": "4.1.0",
	"gd": {
		"android": "2.2074",
		"win": "2.2074",
        "mac": "2.2074"
	},
	"version": "v1.6.0-alpha.1",
	"id": "omgrod.geodify",
	"name": "Geodify",
	"developers": ["OmgRod", "Viper"],
	"description": "Converts most menus' backgrounds to the Geode one (SwelvyBG).",
	"early-load": true,
	"resources": {
		"sprites": ["res/*.png"]
	},
	"settings": {
        "enable-color": {
            "name": "Enable Color Offset",
            "description": "Enables color offset for the SwelvyBG.",
            "type": "bool",
            "default": false
        },
        "color": {
            "name": "Color Offset",
            "description": "The color offset of the background.",
            "type": "color",
            "default": "#FF0000",
            "enable-if": "enable-color"
        },
        "show-main": {
            "name": "Show in main menu",
            "description": "MenuLayer",
            "type": "bool",
            "default": true
        },
        "level-bg": {
            "name": "Show in gameplay",
            "description": "PlayLayer",
            "type": "bool",
            "default": false
        },
        "loading-screen": {
            "name": "Show in loading screen",
            "description": "LoadingLayer",
            "type": "bool",
            "default": true
        },
        "show-level-select": {
            "name": "Show in level select menu",
            "description": "LevelSelectLayer",
            "type": "bool",
            "default": true
        },
        "show-creator": {
            "name": "Show in creator menu",
            "description": "CreatorLayer",
            "type": "bool",
            "default": true
        },
        "show-level-browser": {
            "name": "Show in level lists",
            "description": "Hall of Fame, Featured, Saved, etc. (LevelBrowserLayer)",
            "type": "bool",
            "default": true
        },
        "show-edit-level": {
            "name": "Show in edit level menu",
            "description": "EditLevelLayer",
            "type": "bool",
            "default": true
        },
        "show-level-info": {
            "name": "Show in play level menu",
            "description": "LevelInfoLayer",
            "type": "bool",
            "default": true
        },
        "show-garage": {
            "name": "Show in icon select menu",
            "description": "GJGarageLayer",
            "type": "bool",
            "default": true
        },
        "show-level-search": {
            "name": "Show in search filters menu",
            "description": "LevelSearchLayer",
            "type": "bool",
            "default": true
        },
        "show-leaderboard": {
            "name": "Show in leaderboards menu",
            "description": "LeaderboardsLayer",
            "type": "bool",
            "default": true
        },
        "show-level-list": {
            "name": "Show in level list menu",
            "description": "LevelListLayer",
            "type": "bool",
            "default": true
        },
        "show-gauntlet-select": {
            "name": "Show in gauntlet select menu",
            "description": "GauntletSelectLayer",
            "type": "bool",
            "default": true
        },
        "show-gauntlet-map": {
            "name": "Show in gauntlet map menu",
            "description": "GauntletLayer",
            "type": "bool",
            "default": true
        },
        "show-secret-rewards": {
            "name": "Show in secret chests menu",
            "description": "GauntletLayer",
            "type": "bool",
            "default": true
        },
        "show-inner-tower": {
            "name": "Show in tower levels menu",
            "description": "LevelAreaInnerLayer",
            "type": "bool",
            "default": true
        },
        "show-outer-tower": {
            "name": "Show in tower menu",
            "description": "LevelAreaLayer",
            "type": "bool",
            "default": true
        },
        "show-vault": {
            "name": "Show in Vault",
            "description": "SecretLayer",
            "type": "bool",
            "default": true
        },
        "show-vault-of-secrets": {
            "name": "Show in Vault of Secrets",
            "description": "SecretLayer2",
            "type": "bool",
            "default": true
        },
        "show-basement": {
            "name": "Show in Basement",
            "description": "SecretLayer3",
            "type": "bool",
            "default": true
        },
        "show-chamber-of-time": {
            "name": "Show in Chamber of Time",
            "description": "SecretLayer4",
            "type": "bool",
            "default": true
        },
        "external-mods": {
            "name": "external mods",
            "description": "For external mod layers",
            "type": "bool",
            "default": true
        }
	},
	"dependencies": [
		{
			"id": "geode.node-ids",
			"importance": "required",
			"version": ">=v1.12.0"
		},
		{
			"id": "alphalaneous.happy_textures",
			"importance": "recommended",
			"version": ">=1.3.18"
		}
	]
}
